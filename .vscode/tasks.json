{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p build && premake5 ninja && ninja -C build -t compdb > build/compile_commands.json || true && ninja -C build"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "clear": true,
        "showReuseMessage": false
      },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Generate Ninja (Premake)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "mkdir -p build && premake5 ninja && ninja -C build -t compdb > build/compile_commands.json || true"],
      "presentation": { "reveal": "always", "panel": "shared", "focus": true, "clear": true },
      "problemMatcher": []
    },
    {
      "label": "Generate compile_commands (clangd)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "ninja -C build -t compdb > build/compile_commands.json"],
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": []
    },
    {
      "label": "Ninja: Build",
      "type": "shell",
      "command": "ninja",
      "args": ["-C", "build"],
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Ninja: Clean",
      "type": "shell",
      "command": "ninja",
      "args": ["-C", "build", "-t", "clean"],
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": []
    },
    {
      "label": "Ninja: Build (Verbose)",
      "type": "shell",
      "command": "ninja",
      "args": ["-v", "-C", "build"],
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
