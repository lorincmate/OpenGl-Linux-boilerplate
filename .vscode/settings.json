{
  "clangd.path": "clangd",
  "clangd.checkUpdates": true,
  "clangd.arguments": [
    "--compile-commands-dir=build",
    "--clang-tidy",
    "--clang-tidy-checks=*",
    "--completion-style=detailed",
    "--header-insertion=never",
    "--background-index"
  ],
  "editor.semanticHighlighting.enabled": true,
  "clangd.fallbackFlags": ["-std=c++17"]
}
